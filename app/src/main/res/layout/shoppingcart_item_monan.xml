<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@drawable/shoppingcart_item_monan_bg"
   >
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:button="@drawable/shoppingcart_selector_item_checkbox"
       />
    <androidx.cardview.widget.CardView
        android:id="@+id/carviewMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/checkbox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="10dp">
        <ImageView
            android:id="@+id/imgMonAn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:contentDescription="@string/motaanh"
            android:src="@drawable/burger_ga_ngon"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtTenMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/carviewMonAn"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/shoppingcartItemTenMonAn"
        android:layout_marginStart="15dp"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/txtTenNhahang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/carviewMonAn"
        app:layout_constraintTop_toBottomOf="@+id/txtTenMonAn"
        android:text="@string/shoppingcartTenNhaHang"
        android:layout_marginStart="15dp"
        android:textSize="12sp"
        android:textColor="#9C9C9C"/>
    <TextView
        android:id="@+id/txtSizeMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/carviewMonAn"
        app:layout_constraintTop_toBottomOf="@+id/txtTenNhahang"
        android:text="@string/shoppingcartSizeMonAn"
        android:textColor="#9C9C9C"
        android:layout_marginStart="15dp"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/txtGiaMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/carviewMonAn"
        app:layout_constraintTop_toBottomOf="@+id/txtSizeMonAn"
       app:layout_constraintBottom_toBottomOf="@+id/carviewMonAn"
        android:text="@string/shoppingcartGiaMonAn"
        android:layout_marginStart="15dp"
        android:textColor="#1C8015"
        android:textSize="17sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/layoutSoLuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/txtGiaMonAn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/imgGiamSoLuong"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/motaanh"
            android:src="@drawable/shoppingcart_giamsoluongmonan"
            android:background="@drawable/shoppingcart_tang_giam_sp_bg"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/txtDemSoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shoppingcartSoLuong"
            android:textSize="18sp"
            android:layout_marginStart="15dp"/>
        <ImageView
            android:id="@+id/imgTangSoLuong"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/motaanh"
            android:src="@drawable/shoppingcart_tangsoluong_monan"
            android:background="@drawable/shoppingcart_tang_giam_sp_bg"
            android:padding="5dp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/imgXoaMonAn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/motaanh"
        android:src="@drawable/shoppingcart_xoa_mon_an"
        android:background="?attr/selectableItemBackground"
        android:layout_marginBottom="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>