<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="35dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:background="@drawable/home_bacground_promotion">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutGiamGia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgMonAn">
            <LinearLayout
                android:id="@+id/layout_ThongTinGiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/txtMonAn">
                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:text="@string/home_text_title"
                    android:textSize="23sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/irish_grover"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/txtThoiGianKhuyenMai"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Promotion_ThoiGianGiam"
                    android:textSize="23sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/irish_grover"
                    android:gravity="center"

                    />

            </LinearLayout>


            <TextView
                android:id="@+id/txtMonAn"
                android:layout_width="172dp"
                android:layout_height="48dp"
                android:fontFamily="@font/julee_regular"
                android:gravity="center"
                android:text="@string/home_text_desc"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_ThongTinGiam" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imgMonAn"
            android:layout_width="152dp"
            android:layout_height="140dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/img_bo"
            android:src="@drawable/promotion_burger_bo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/layoutGiamGia"
            android:layout_marginTop="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>