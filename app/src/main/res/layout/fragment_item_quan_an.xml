<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentQuanAn"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    tools:context=".view.ui.home.fragment_quan_an.fragment_item_quan_an">


   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   <FrameLayout
       android:id="@+id/fragment_banner"
       android:layout_width="match_parent"
       android:layout_height="230dp"
       android:background="@android:color/transparent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent">

      <!-- Banner nền -->
      <ImageView
          android:id="@+id/imgBanner"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:contentDescription="@string/motaanh"
          android:src="@drawable/anhbanner_cobasaigon"
          android:scaleType="fitXY" />

      <!-- Lớp phủ màu mờ trên banner -->
      <View
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/bacground_banner_quan_an" />

      <!-- Layout nội dung nằm trên banner -->
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/layout_banner"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:paddingStart="20dp"
          android:paddingEnd="20dp"
          android:paddingTop="40dp"
          android:paddingBottom="16dp">

         <!-- Icon thoát -->
         <ImageView
             android:id="@+id/imgThoat"
             android:layout_width="48dp"
             android:layout_height="48dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             android:src="@drawable/promotion_icon_quaylai"
             android:contentDescription="@string/motaanh"
             android:padding="12dp"
             app:tint="#FFFFFF"
             android:background="?attr/selectableItemBackground" />

         <!-- Icon thêm -->
         <ImageView
             android:id="@+id/imgThemThongTin"
             android:layout_width="48dp"
             android:layout_height="48dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:src="@drawable/icon_more"
             android:contentDescription="@string/motaanh"
             android:padding="12dp"
             app:tint="#FFFFFF" />

         <!-- Avatar -->
         <de.hdodenhof.circleimageview.CircleImageView
             android:id="@+id/imgAnhQuanAn"
             android:layout_width="90dp"
             android:layout_height="90dp"
             app:civ_border_color="#FFFFFF"
             app:civ_border_width="1dp"
             android:src="@drawable/home_logo_nhahang_cobasg"
             app:layout_constraintTop_toBottomOf="@+id/imgThoat"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_marginTop="8dp" />

         <!-- Tên quán -->
         <TextView
             android:id="@+id/txtTenQuanAn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/QuanAn_TenQuanAn"
             android:textColor="#FFFFFF"
             android:textSize="26sp"
             android:fontFamily="@font/judson_regular"
             app:layout_constraintTop_toTopOf="@+id/imgAnhQuanAn"
             app:layout_constraintStart_toEndOf="@+id/imgAnhQuanAn"
             android:layout_marginStart="16dp" />

         <!-- Đánh giá -->
         <LinearLayout
             android:id="@+id/layout_danhgia"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             app:layout_constraintTop_toBottomOf="@+id/txtTenQuanAn"
             app:layout_constraintStart_toStartOf="@+id/txtTenQuanAn"
             android:layout_marginTop="6dp">

            <!-- 5 sao -->
            <ImageView android:id="@+id/star1"  android:layout_width="17dp" android:layout_height="17dp" android:src="@drawable/home_ngoisao_danhgia1" app:tint="#FFC107" android:contentDescription="@string/motaanh"/>
            <ImageView android:id="@+id/star2" android:layout_width="17dp" android:layout_height="17dp" android:src="@drawable/home_ngoisao_danhgia1" app:tint="#FFC107" android:contentDescription="@string/motaanh"/>
            <ImageView android:id="@+id/star3" android:layout_width="17dp" android:layout_height="17dp" android:src="@drawable/home_ngoisao_danhgia1" app:tint="#FFC107" android:contentDescription="@string/motaanh"/>
            <ImageView android:id="@+id/star4" android:layout_width="17dp" android:layout_height="17dp" android:src="@drawable/home_ngoisao_danhgia1" app:tint="#FFC107" android:contentDescription="@string/motaanh"/>
            <ImageView android:id="@+id/star5" android:layout_width="17dp" android:layout_height="17dp" android:src="@drawable/home_ngoisao_danhgia1" app:tint="#FFC107" android:contentDescription="@string/motaanh"/>

            <!-- Số sao TB và lượt đánh giá -->
            <TextView
                android:id="@+id/txtTongTB_DanhGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/QuanAn_TongTB_DanhGia"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtTongSoDanhGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/QuanAn_TongLuotDanhGia"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                android:textStyle="bold" />
         </LinearLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </FrameLayout>

   <!-- Container cho icon và text để căn chỉnh dễ hơn -->
   <LinearLayout
       android:id="@+id/layout_header_menu"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center_vertical"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/fragment_banner"
       android:layout_marginStart="20dp"
       android:layout_marginTop="16dp">

      <ImageView
          android:id="@+id/imgIconHot"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:contentDescription="@string/motaanh"
          android:src="@drawable/icon_hot" />

      <TextView
          android:id="@+id/txtThucDon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/QuanAn_ThucDon"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginStart="8dp" />
   </LinearLayout>

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/rvMonAnShop"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_margin="15dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/layout_header_menu"
       app:layout_constraintBottom_toBottomOf="parent"
       tools:listitem="@layout/layout_item_monan_quan_an"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <ImageView
       android:id="@+id/imgGioHang"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:contentDescription="@string/motaanh"
       android:src="@drawable/shopping_cart_24px"
      android:padding="13dp"
       android:background="@drawable/bg_cart_dichuyen_quan_an"
       app:tint="#FFFFFF"
       android:layout_gravity="center|end"/>
</FrameLayout>